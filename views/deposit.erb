<form class="navbar-form navbar-left" role="search" action='/deposit' method='post'>
  <div class="form-group">

    <select class='form-control' name='id'>
      <% @accounts.each do |account| %>
        <option value='<%= account.id %>'>ID: <%= account.id %> - <%= account.main_holder.name %> - <%= account.type %> Account </option>
      <% end %>
    </select>

    <input type='text' name='amount' class='form-control' placeholder='Amount'>
  </div>
  <button type="submit" class="btn btn-default">Deposit</button>
</form>
