<div class='row'>

  <div class="col-md-2">
    <div class="btn-group-vertical" role="group" aria-label="...">
      <a class='btn btn-default' href='/new_loan'>New Loan</a>
      <a class='btn btn-default' href='/pay_loan'>Make Loan Payment</a>
    </div>
  </div>

  <div class='col-md-8'>
    <% if @loans %>
      <div class="list-group">
        <% @loans.each do |key, loan| %>
          <a href="/loan_view?id=<%= loan.id %>" type="button" class="list-group-item">
            ID: <%= loan.id %>
            Outstanding: <%= loan.output_outstanding %>
            Holder Name: <%= loan.holder.name %>
            Holder ID: <%= loan.holder.id %>
          </a> 
        <% end %>
      </div>
    <% end %>
  </div>

</div>
