<h2>Accounts</h2>

<% if @message %>
  <%= @message.output %>
<% end %>

<% if @accounts %>
  <div class="list-group">
    <% @accounts.each do |key, account| %>
      <a href="" type="button" class="list-group-item">
        ID: <%= account.id %>
        Type: <%= account.type %>
        Holder Name: <%= account.main_holder.name %>
        Holder ID: <%= account.main_holder.id %>
      </a> 
    <% end %>
  </div>
<% end %>

<a class='btn btn-default' href="/create_account">Create New Account</a>
