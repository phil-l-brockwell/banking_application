<% if @accounts.any? %>

  <form class="navbar-form navbar-left" role="search" action='/withdraw' method='post'>
    <div class="form-group">

      <select class='form-control' name='id'>
        <% @accounts.each do |account| %>
          <option value='<%= account.id %>'>ID: <%= account.id %> - <%= account.main_holder.name %> - <%= account.type %> Account </option>
        <% end %>
      </select>

      <input type='text' name='amount' class='form-control' placeholder='Amount'>
    </div>
    <button type="submit" class="btn btn-default">Withdraw</button>
  </form>

<% else %>
  <h3>No Accounts!</h3>
  <a class="btn btn-default" href='/create_account'>Add an Account</a>
<% end %>