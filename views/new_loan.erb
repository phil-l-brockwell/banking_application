<% if @holders.any? %>

<form class="navbar-form navbar-left" role="search" action='/new_loan' method='post'>
  <div class="form-group">
    <!-- <input type="text" name='id' class="form-control" placeholder="Holder ID"> -->

    <select class='form-control' name='id'>
      <% @holders.each do |holder| %>
        <option value='<%= holder.id %>'> <%= holder.id %>.<%= holder.name %> </option>
      <% end %>
    </select>

    <input type='text' name='amount' class='form-control' placeholder='Amount'>
    <input type='text' name='term' class='form-control' placeholder='Term'>
    <input type='text' name='rate' class='form-control' placeholder='Rate'>
  </div>
  <button type="submit" class="btn btn-default">Create</button>
</form>

<% else %>
  <h4>No Holders Currently Exist</h4>
  <a class="btn btn-default" href='/new_holder'>Add a Holder</a>
<% end %>
