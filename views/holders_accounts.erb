<h2>Accounts of <%= @holder.name %></h2>

<% if @accounts %>
  <div class="list-group">
    <% @accounts.each do |account| %>
      <a href="/transactions" type="button" class="list-group-item">
        Type: <%= account.type %>
        ID: <%= account.id %>
        Balance: <%= account.balance %>
      </a> 
    <% end %>
  </div>
<% end %>

<a class='btn btn-default' href="/create_account">Create New Account</a>
<a class='btn btn-default' href='/'>Deposit</a>
<a class='btn btn-default' href='/balance'>Balance</a>
<a class='btn btn-default' href='/withdraw'>Withdraw</a>
<a class='btn btn-default' href='/transfer'>Transfer</a>
<a class='btn btn-default' href='/add_holder'>Add Holder</a>
