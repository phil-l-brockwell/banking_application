<% if @loans.any? %>

<form class="navbar-form navbar-left" role="search" action='/pay_loan' method='post'>
  <div class="form-group">

    <select class='form-control' name='id'>
      <% @loans.each do |loan| %>
        <option value='<%= loan.id %>'>
          ID: <%= loan.id %> - 
          Repayment Date: <%= loan.repayment_date %> -
          Outstanding: <%= loan.output_outstanding %> -
          Holder: <%= loan.holder.name %> 
        </option>
      <% end %>
    </select>

    <input type='text' name='amount' class='form-control' placeholder='Amount'>
  </div>
  <button type="submit" class="btn btn-default">Pay</button>
</form>

<% else %>
  <h4>No Loans Currently Exist</h4>
  <a class="btn btn-default" href='/new_loan'>Add a Loan</a>
<% end %>
