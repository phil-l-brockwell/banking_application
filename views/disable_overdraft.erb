<form class="navbar-form navbar-left" role="search" action='/disable_overdraft' method='post'>
  <div class="form-group">
    
    <select class='form-control' name='id'>
      <% @accounts.each do |account| %>
        <option value='<%= account.id %>'>ID: <%= account.id %> - <%= account.main_holder.name %> - <%= account.type %> Account </option>
      <% end %>
    </select>

  </div>
  <button type="submit" class="btn btn-default">Disable Overdraft</button>
</form>
